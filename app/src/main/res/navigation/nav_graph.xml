<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">
    <fragment
        android:id="@+id/cameraFragment"
        android:name="me.togaparty.notable_opencv.fragments.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_cameraFragment_to_previewImage"
            app:destination="@id/previewImage" />
        <action
            android:id="@+id/action_cameraFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="me.togaparty.notable_opencv.fragments.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >

        <action
            android:id="@+id/action_dashboardFragment_to_glossaryFragment"
            app:destination="@id/glossaryFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_galleryFragment"
            app:destination="@id/galleryFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_settingsActivity"
            app:destination="@id/settingsActivity" />

    </fragment>
    <fragment
        android:id="@+id/glossaryFragment"
        android:name="me.togaparty.notable_opencv.fragments.GlossaryFragment"
        android:label="fragment_glossary"
        tools:layout="@layout/fragment_glossary" >
    </fragment>
    <fragment
        android:id="@+id/inspectFragment"
        android:name="me.togaparty.notable_opencv.fragments.InspectFragment"
        android:label="fragment_glossary"
        tools:layout="@layout/fragment_glossary" >
    </fragment>
    <fragment
        android:id="@+id/previewImage"
        android:name="me.togaparty.notable_opencv.fragments.PreviewImageFragment"
        android:label="fragment_preview_image"
        tools:layout="@layout/fragment_preview_image" >
        <action
            android:id="@+id/action_previewImage_pop"
            app:popUpTo="@id/previewImage"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/galleryFragment"
        android:name="me.togaparty.notable_opencv.fragments.GalleryFragment"
        android:label="GalleryFragment" >
        <action
            android:id="@+id/action_galleryFragment_to_galleryFullscreenFragment"
            app:destination="@id/galleryFullscreenFragment" />
        <action
            android:id="@+id/action_galleryFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/galleryFullscreenFragment"
        android:name="me.togaparty.notable_opencv.fragments.GalleryFullscreenFragment"
        android:label="GalleryFullscreenFragment" />
    <activity
        android:id="@+id/settingsActivity"
        android:name="me.togaparty.notable_opencv.SettingsActivity"
        android:label="SettingsActivity" />
</navigation>